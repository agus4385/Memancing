-- Versi dengan UI modern + tombol Auto ON/OFF

-- üåø Konfigurasi dasar
local Settings = {
    AutoFish = true,    -- aktifkan auto fishing
    TimePerCast = 0.4,  -- waktu antar lempar (detik)
    EnableGUI = true,   -- tampilkan GUI
}

-- üí´ Fungsi GUI Modern
local function createUI()
    local player = game.Players.LocalPlayer
    local gui = Instance.new("ScreenGui")
    gui.Name = "FishItUI"
    gui.ResetOnSpawn = false
    gui.Parent = player:WaitForChild("PlayerGui")

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 270, 0, 200)
    frame.Position = UDim2.new(0.02, 0, 0.2, 0)
    frame.BackgroundColor3 = Color3.fromRGB(15, 15, 20)
    frame.BorderSizePixel = 0
    frame.Active = true
    frame.Draggable = true
    frame.Parent = gui
    Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

    local title = Instance.new("TextLabel")
    title.Text = "üé£ Fish It Control Panel"
    title.Size = UDim2.new(1, 0, 0, 30)
    title.BackgroundTransparency = 1
    title.TextColor3 = Color3.fromRGB(0, 200, 255)
    title.Font = Enum.Font.SourceSansBold
    title.TextSize = 20
    title.Parent = frame

    local status = Instance.new("TextLabel")
    status.Text = "Status: Ready"
    status.Position = UDim2.new(0, 10, 0, 40)
    status.Size = UDim2.new(1, -20, 0, 25)
    status.BackgroundTransparency = 1
    status.TextColor3 = Color3.fromRGB(255, 255, 255)
    status.Font = Enum.Font.SourceSans
    status.TextSize = 18
    status.TextXAlignment = Enum.TextXAlignment.Left
    status.Parent = frame

    local speedLabel = Instance.new("TextLabel")
    speedLabel.Text = "üéõÔ∏è Speed: " .. Settings.TimePerCast .. "s"
    speedLabel.Position = UDim2.new(0, 10, 0, 70)
    speedLabel.Size = UDim2.new(1, -20, 0, 25)
    speedLabel.BackgroundTransparency = 1
    speedLabel.TextColor3 = Color3.fromRGB(200, 200, 255)
    speedLabel.Font = Enum.Font.SourceSans
    speedLabel.TextSize = 18
    speedLabel.TextXAlignment = Enum.TextXAlignment.Left
    speedLabel.Parent = frame

    local toggle = Instance.new("TextButton")
    toggle.Text = "üü¢ AutoFish: ON"
    toggle.Size = UDim2.new(1, -20, 0, 35)
    toggle.Position = UDim2.new(0, 10, 0, 100)
    toggle.BackgroundColor3 = Color3.fromRGB(30, 50, 30)
    toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
    toggle.Font = Enum.Font.SourceSansBold
    toggle.TextSize = 16
    toggle.Parent = frame
    Instance.new("UICorner", toggle).CornerRadius = UDim.new(0, 8)

    local speedBtn = Instance.new("TextButton")
    speedBtn.Text = "‚¨Ü / ‚¨á Speed"
    speedBtn.Size = UDim2.new(1, -20, 0, 35)
    speedBtn.Position = UDim2.new(0, 10, 0, 145)
    speedBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 60)
    speedBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    speedBtn.Font = Enum.Font.SourceSansBold
    speedBtn.TextSize = 16
    speedBtn.Parent = frame
    Instance.new("UICorner", speedBtn).CornerRadius = UDim.new(0, 8)

    -- üåà Fungsi tombol ON/OFF
    toggle.MouseButton1Click:Connect(function()
        Settings.AutoFish = not Settings.AutoFish
        if Settings.AutoFish then
            toggle.Text = "üü¢ AutoFish: ON"
            toggle.BackgroundColor3 = Color3.fromRGB(30, 50, 30)
        else
            toggle.Text = "üî¥ AutoFish: OFF"
            toggle.BackgroundColor3 = Color3.fromRGB(50, 20, 20)
        end
    end)

    -- ‚ö° Fungsi ubah kecepatan
    local step = 0.1
    speedBtn.MouseButton1Click:Connect(function()
        Settings.TimePerCast = math.max(0.1, Settings.TimePerCast - step)
        speedLabel.Text = "üéõÔ∏è Speed: " .. string.format("%.1f", Settings.TimePerCast) .. "s"
    end)
    speedBtn.MouseButton2Click:Connect(function()
        Settings.TimePerCast = math.min(5, Settings.TimePerCast + step)
        speedLabel.Text = "üéõÔ∏è Speed: " .. string.format("%.1f", Settings.TimePerCast) .. "s"
    end)

    return status
end

-- üß† Fungsi utama auto fishing
local function startFishing()
    local statusLabel
    if Settings.EnableGUI then
        statusLabel = createUI()
    end

    task.spawn(function()
        while task.wait(Settings.TimePerCast) do
            if Settings.AutoFish then
                if statusLabel then
                    statusLabel.Text = "Status: üé£ Memancing..."
                end
                task.wait(Settings.TimePerCast)
                if statusLabel then
                    statusLabel.Text = "Status: ‚úÖ Selesai lempar"
                end
            else
                if statusLabel then
                    statusLabel.Text = "Status: ‚è∏Ô∏è Auto OFF"
                end
            end
        end
    end)
end

-- üöÄ Jalankan
task.spawn(startFishing)
print("‚úÖ Fish It Auto Fishing Loaded by Agus Kurniawan")
